      <description>A sample portlet for showing usage of Portlet URL property</description>
      <portlet-name>URLPropertySamplePortlet</portlet-name>
      <display-name>URL Property Sample Portlet</display-name>
      <portlet-class>t3.samples.portlets.URLPropertySamplePortlet</portlet-class>

