   <filter>
      <filter-name>RenderFilterSample</filter-name>
      <filter-class>t3.samples.portlets.filters.RenderFilterSample</filter-class>
      <lifecycle>RENDER_PHASE</lifecycle>
   </filter>

   <filter-mapping>
      <filter-name>RenderFilterSample</filter-name>
      <portlet-name>AnnotationSamplePortlet</portlet-name>
   </filter-mapping>



    <!--<default-namespace>http:example.com/events</default-namespace>-->
    <event-definition>
        <name>myTestEvent</name>
        <value-type>java.lang.String</value-type>
    </event-definition>

    <public-render-parameter>
        <identifier>zip-id</identifier>
        <qname xmlns:x="http://sun.com/params">x:zip</qname>
    </public-render-parameter>

    <public-render-parameter>
        <identifier>test_public_param</identifier>
        <!--<qname xmlns:x="http://sun.com/params1">x:test_public_param</qname>-->
        <name>test_public_param</name>
    </public-render-parameter>

</portlet-app>
